<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/tenement_background">
    <!--title-->
    <LinearLayout
            android:id="@+id/lay_main_title" android:layout_width="match_parent"
            android:layout_height="50dp" android:orientation="horizontal" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">
        <!--返回-->
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent"
                android:gravity="left|center_vertical|right">
            <LinearLayout
                    android:id="@+id/lay_express_back"
                    android:layout_width="90dp" android:layout_height="50dp"
                    android:onClick="onClick">
                <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/icon_arrow_left"/>
            </LinearLayout>
        </LinearLayout>
        <!--标题文字-->
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_main_title"
                    android:gravity="center"
                    android:text="@string/txt_express"
                    android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>

    <!--context-->
    <LinearLayout
            android:background="@color/gray"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <!--寄件申请-->
        <LinearLayout
                android:onClick="onClick"
                android:id="@+id/lay_express_sendreciveinfo"
                android:orientation="horizontal"
                android:background="@color/white" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:src="@drawable/icon_express_send"
                    android:layout_width="50dp" android:layout_height="match_parent"/>
            <TextView
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="@string/txt_express_send"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <LinearLayout
                    android:paddingRight="20dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView
                        android:src="@drawable/icon_arrow_right"
                        android:layout_width="30dp" android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:background="@color/white" android:layout_width="match_parent" android:layout_height="1dp">
            <View android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_height="1px" android:background="@color/gray"
                  android:layout_width="match_parent"></View>
        </LinearLayout>

        <!--代收快递-->
        <LinearLayout
                android:id="@+id/lay_express_waitreceive"
                android:onClick="onClick"
                android:orientation="horizontal"
                android:background="@color/white" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:src="@drawable/icon_express_receive"
                    android:layout_width="50dp" android:layout_height="match_parent"/>
            <TextView
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="@string/txt_express_rec"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <LinearLayout
                    android:paddingRight="20dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:paddingRight="5dp"
                        android:text="3"
                        android:textSize="20sp"
                        android:textColor="@color/pink"
                        android:gravity="center"
                        android:layout_width="wrap_content" android:layout_height="match_parent"/>
                <ImageView
                        android:src="@drawable/icon_arrow_right"
                        android:layout_width="30dp" android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="10dp"></LinearLayout>

        <!--通知手机管理-->
        <LinearLayout
                android:id="@+id/lay_express_phonemanage"
                android:onClick="onClick"
                android:orientation="horizontal"
                android:background="@color/white" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:src="@drawable/icon_express_note"
                    android:layout_width="50dp" android:layout_height="match_parent"/>
            <TextView
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="@string/txt_express_note"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <TextView
                    android:paddingLeft="5dp"
                    android:text="(3)"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@android:color/black" android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>