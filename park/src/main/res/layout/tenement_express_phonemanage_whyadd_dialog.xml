<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/common_dialog_corners">

    <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent" android:layout_height="80dp">
        <TextView
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:id="@+id/txt_express_phonemanage_whyadd_info"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/btn_express_phonemanage_dialog_close"
                android:text="@string/txt_express_phonemanage_know"
                android:textColor="@color/white"
                android:background="@drawable/normal_bigbutton_selector"
                android:layout_width="match_parent" android:layout_height="45dp"/>
        <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_tenement_bangbangman"
                android:layout_width="80dp" android:layout_height="80dp"/>
    </RelativeLayout>

</LinearLayout>