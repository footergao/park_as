<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="60dp">
            <!--手机号码昵称-->
            <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/txt_express_phonemanage_phonename"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:text="我的"
                    android:textSize="25sp"/>
            <!--状态-->
            <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:id="@+id/txt_express_phonemanage_phonenum"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="180000000000"
                        android:layout_width="wrap_content" android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>