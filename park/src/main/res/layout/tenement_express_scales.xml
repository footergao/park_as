<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/tenement_background">
    <!--title-->
    <LinearLayout
            android:id="@+id/lay_main_title" android:layout_width="match_parent"
            android:layout_height="50dp" android:orientation="horizontal" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">
        <!--返回-->
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent"
                android:gravity="left|center_vertical|right">
            <LinearLayout
                    android:id="@+id/lay_express_scales_back"
                    android:layout_width="90dp" android:layout_height="50dp"
                    android:onClick="onClick">
                <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/icon_arrow_left"/>
            </LinearLayout>
        </LinearLayout>
        <!--标题文字-->
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_main_title"
                    android:gravity="center"
                    android:text="@string/txt_express_scales"
                    android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>

    <!--context-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:background="@color/gray"
                  android:orientation="vertical">

        <!--寄-->
        <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="80dp">
            <LinearLayout android:layout_width="40dp" android:layout_height="match_parent">
                <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_express_send"
                        android:layout_width="wrap_content" android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:text="吴邪"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="20sp"
                            android:textColor="@color/gray"
                            android:text="12887665678"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView

                        android:textSize="20sp"
                        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="10dp"></LinearLayout>

        <!--收-->
        <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="80dp">
            <LinearLayout android:layout_width="40dp" android:layout_height="match_parent">
                <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_express_receive"
                        android:layout_width="wrap_content" android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:text="吴邪"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="20sp"
                            android:textColor="@color/gray"
                            android:text="12887665678"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                        android:textSize="20sp"
                        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!--快件信息-->
        <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent" android:layout_height="30dp">
            <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/pink"
                    android:text="@string/txt_express_info"
                    android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>

        <!--快递公司-->
        <LinearLayout
                android:id="@+id/lay_express_company"
                android:onClick="onClick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:layout_width="match_parent" android:layout_height="50dp">
            <TextView
                    android:gravity="center_vertical"
                    android:text="@string/txt_express_company"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_width="0px" android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/txt_express_companyname_out"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <ImageView
                    android:src="@drawable/icon_arrow_right"
                    android:layout_width="30dp" android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:background="@color/white" android:layout_width="match_parent" android:layout_height="1dp">
            <View android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_height="1px" android:background="@color/gray"
                  android:layout_width="match_parent"></View>
        </LinearLayout>
        <!--快件重量-->
        <LinearLayout
                android:id="@+id/lay_express_weight"
                android:onClick="onClick"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:layout_width="match_parent" android:layout_height="50dp">
            <TextView
                    android:gravity="center_vertical"
                    android:text="@string/txt_express_weight"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_width="0px" android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/txt_express_weight_out"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <ImageView
                    android:src="@drawable/icon_arrow_right"
                    android:layout_width="30dp" android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="10dp"/>

        <!--费用-->
        <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:layout_width="match_parent" android:layout_height="50dp">
            <TextView
                    android:gravity="center_vertical"
                    android:text="@string/txt_express_money"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_width="0px" android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/txt_express_cost"
                    android:gravity="center_vertical"
                    android:textColor="@color/pink"
                    android:textSize="20sp"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <ImageView
                    android:src="@drawable/icon_arrow_right"
                    android:layout_width="30dp" android:layout_height="match_parent"/>
        </LinearLayout>

        <!--button-->
        <Button
                android:onClick="onClick"
                android:id="@+id/btn_express_sale_submit"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:text="@string/txt_update_submit"
                android:background="@drawable/normal_bigbutton_selector"
                android:layout_width="match_parent" android:layout_height="45dp"/>
    </LinearLayout>
</LinearLayout>