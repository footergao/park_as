<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/tenement_background">
    <!--title-->
    <LinearLayout
            android:id="@+id/lay_main_title" android:layout_width="match_parent"
            android:layout_height="50dp" android:orientation="horizontal" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">
        <!--返回-->
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent"
                android:gravity="left|center_vertical|right">
            <LinearLayout
                    android:id="@+id/lay_main_mine_order_back"
                    android:layout_width="90dp" android:layout_height="50dp"
                    android:onClick="onClick">
                <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/icon_arrow_left"/>
            </LinearLayout>
        </LinearLayout>
        <!--标题文字-->
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_main_title"
                    android:gravity="center"
                    android:text="@string/main_mine_order_bangbang"
                    android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1" android:layout_width="0px" android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>

    <!--context-->
    <LinearLayout
            android:background="@color/gray"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent" android:layout_height="50dp">
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/radiobtn_login">
                <RadioButton
                        android:id="@+id/rb_main_mine_order_bangbang_all"
                        android:checked="true"
                        android:button="@null"
                        android:background="@drawable/radio_button_selector"
                        android:gravity="center"
                        android:textColor="@color/pink"
                        android:textSize="20sp"
                        android:text="@string/main_mine_order_bangbang_all"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp" android:layout_height="match_parent"/>
                <RadioButton
                        android:id="@+id/rb_main_mine_order_bangbang_complete"
                        android:button="@null"
                        android:background="@drawable/radio_button_selector"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="@string/main_mine_order_bangbang_complete"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp" android:layout_height="match_parent"/>
                <RadioButton
                        android:id="@+id/rb_main_mine_order_bangbang_nofinish"
                        android:button="@null"
                        android:background="@drawable/radio_button_selector"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="@string/main_mine_order_bangbang_nofinish"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="0dp" android:layout_height="match_parent"/>
            </RadioGroup>
        </LinearLayout>
        <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_main_mine_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
    </LinearLayout>


</LinearLayout>