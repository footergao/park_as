<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/btn_press_to_talk"
        android:layout_width="@dimen/margin_160"
        android:layout_height="@dimen/margin_160"
        android:layout_marginTop="@dimen/margin_45"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/loundly" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/margin_20" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <SeekBar
                android:id="@+id/sb_record"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_recording_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="0&apos;&apos;"
                android:textColor="@color/black"
                android:textSize="@dimen/commont_txt_tip_size" />
        </LinearLayout>
    </LinearLayout>

    
    <Button
        android:onClick="onClick"
        android:id="@+id/btn_close_dialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/icon_close_dialog" />

</LinearLayout>